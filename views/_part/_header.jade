div.view-header
    div.nav
        span.brand-logo
            i.fa.fa-paper-plane-o
            | Yux
        -var hasLogin = user ? 1 : 0;
        ul.header-nav.left
            each item in menus||[]
                if item.position == 1
                    if item.show == 2
                        li(class='#{item.current ? "active" : ""}')
                            a(href="#{item.url}",data-id="#{item.attr}") #{item.title}
                    if user
                        if item.show == 1 && item.role <= user.role
                            li(class='#{item.current ? "active" : ""}')
                                a(href="#{item.url}",data-id="#{item.attr}") #{item.title}
                    else
                        if item.show == 0
                            li(class='#{item.current ? "active" : ""}')
                                a(href="#{item.url}",data-id="#{item.attr}") #{item.title}
        ul.header-nav.right
            if user
                li(class='#{usercenter ? "active" : ""}')
                    a(href='/user/index') #{user.nickname}
            each item in menus||[]
                if item.position == 2
                    if item.show == 2
                        li(class='#{item.current ? "active" : ""}')
                            a(href="#{item.url}",data-id="#{item.attr}") #{item.title}

                    if user
                        if item.show == 1 && item.role <= user.role
                            li(class='#{item.current ? "active" : ""}')
                                a(href="#{item.url}",data-id="#{item.attr}") #{item.title}
                    else
                        if item.show == 0
                            li(class='#{item.current ? "active" : ""}')
                                a(href="#{item.url}",data-id="#{item.attr}") #{item.title}

