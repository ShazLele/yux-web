

doctype html
html
    head
        meta(charset='UTF-8')
        title #{'语巷，一个最不靠谱的前端程序员技术交流社区' + title}
        meta(name='description',content="#{description || '最不靠谱的技术分享空间'}")
        meta(name="keywords",content="#{keywords || '开源项目,js,javascript,html,web,html5,css,css3,nodejs,bootstrap,angular,react'}")
        link(rel='stylesheet',href='/components/materialize/dist/css/materialize.css')
        link(rel='stylesheet',href='/components/font-awesome/css/font-awesome.css')
        link(rel='stylesheet',href='/css/yux-ui.css')
        link(rel='stylesheet',href='/css/layout.css')
        block css
    body.blue-grey.lighten-5
        include _part/_header
        div.view-layout
            div.layout-main.layout-main-simple
                div.white.main-content
                    block content
        include _part/_footer
        include _part/_switch
        script(src='/components/jquery/dist/jquery.min.js')
        script(src='/components/materialize/dist/js/materialize.min.js')
        script(src='/js/layout.js')
        block javascript
